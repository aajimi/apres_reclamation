<h1> Réclamations </h1>
<strong> Remplir ce formulaire pour passer une réclamation</strong>



{% block content %}
    <h1>Passez une réclmation</h1>

    {{ form_start(reclamationForm) }}

    <div class="form-inline">{{ form_row(reclamationForm.sujet,{ 'attr' : {'class' : 'form-control'}}) }}</div>
    <div class="form-inline">{{ form_row(reclamationForm.dateReclamation,{'attr' : {'class' : 'form-control'}}) }}</div>
    <div class="form-inline">{{ form_row(reclamationForm.flagTraite,{'attr' : {'class' : 'form-control'}}) }}</div>
    <input type="submit" value="Envoyez Reclamation" />
    {{ form_end(reclamationForm) }}

    <ul>
        <li>
            <a href="{{ path('ShowReclamationList') }}">Back to the list of reclamation</a>
        </li>
    </ul>
{% endblock %}
