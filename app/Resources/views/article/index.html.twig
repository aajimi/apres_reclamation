{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>

    <table>
        <thead>
            <tr>
                <th>Idarticle</th>
                <th>Datepublication</th>
                <th>Nbrvues</th>
                <th>Titre</th>
                <th>Article</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'idArticle': article.idArticle }) }}">{{ article.idArticle }}</a></td>
                <td>{% if article.datePublication %}{{ article.datePublication|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ article.nbrVues }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.article }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'idArticle': article.idArticle }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('article_edit', { 'idArticle': article.idArticle }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new article</a>
        </li>
    </ul>
{% endblock %}
